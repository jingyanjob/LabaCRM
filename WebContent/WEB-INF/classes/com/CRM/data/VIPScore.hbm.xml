<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>	
	<class name="com.CRM.data.VIPScore" table="vipscore">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="uid" column="uid" />
		<property name="buid" column="buid" />
		<property name="username" column="username" />
		<property name="sourcesite" column="sourcesite" />
		<property name="perscore" column="perscore" />
		<property name="isplus" column="isplus" />
		<property name="totalscore" column="totalscore" />
		<property name="updatetime" column="updatetime" />
		<property name="weiboid" column="weiboid" />
		<property name="weibotime" column="weibotime" />
	</class>
</hibernate-mapping>